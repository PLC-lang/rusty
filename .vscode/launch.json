    "version": "0.2.0",
    "configurations": [
    {
        "name": "(gdb) Launch",
        "type": "cppdbg",
        "request": "launch",
        "program": "/home/vagrant/m100-runtime-prototype/load_so/main",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            }
        ]
    },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'rusty'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=rusty"
                ],
                "filter": {
                    "name": "rusty",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rustyc'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rustyc",
                    "--package=rusty"
                ],
                "filter": {
                    "name": "rustyc",
                    "kind": "bin"
                }
            },
            "args": ["examples/MainProg.st"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'rustyc'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=rustyc",
                    "--package=rusty"
                ],
                "filter": {
                    "name": "rustyc",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration test 'tests'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=tests",
                    "--package=rusty"
                ],
                "filter": {
                    "name": "tests",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}