    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug source 'target/demo.st'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=plc",
                    "--package=plc_driver"
                ],
                "filter": {
                    "name": "plc",
                    "kind": "bin"
                }
            },
            "args": [
                "target/demo.st"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "rusty"
            },
            "terminal": "integrated"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit test 'demo'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=plc_driver"
                ],
                "filter": {
                    "name": "plc",
                    "kind": "lib"
                }
            },
            "args": [
                "demo"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "rusty"
            },
            "terminal": "integrated"
        }
    ]
}
