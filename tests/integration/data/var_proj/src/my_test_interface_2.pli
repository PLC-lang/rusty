VAR_GLOBAL
    globalCounter: INT;
END_VAR

TYPE RGB : (
        red,
        green,
        blue
    );
END_TYPE

TYPE ColourInfo:
    STRUCT
        timesPicked : INT;
        primaryColour : RGB;
    END_STRUCT
END_TYPE

FUNCTION PrintStatistics
VAR_INPUT
    runCount: INT;
    colours: {sized} ColourInfo...;
END_VAR
END_FUNCTION

FUNCTION_BLOCK ColourTracker
VAR
    internalCount : INT;
END_VAR
VAR_OUTPUT
    printedInfo : STRING;
END_VAR
VAR_IN_OUT
    colour : ColourInfo;
END_VAR
END_FUNCTION_BLOCK
