    Key : STRING[1023];
    Value : BOOL;
END_VAR
END_FUNCTION
(**
 * @brief Set configuration key to given integer value.
 *
 * If the key does not exist yet a new key entry is created.
 *
 * @param[in] Key The configuration key (e.g "path/name")
 * @param[in] Value The configuration value to set
 *
 * @return Error code structure
*)
FUNCTION Config_SetInteger : ErrorCode
VAR_INPUT
    Key : STRING[1023];
    Value : LINT;
END_VAR
END_FUNCTION
(**
 * @brief Set configuration key to given real value.
 *
 * If the key does not exist yet a new key entry is created.
 *
 * @param[in] Key The configuration key (e.g "path/name")
 * @param[in] Value The configuration value to set
 *
 * @return Error code structure
*)
FUNCTION Config_SetReal : ErrorCode
VAR_INPUT
    Key : STRING[1023];
    Value : LREAL;
END_VAR
END_FUNCTION
