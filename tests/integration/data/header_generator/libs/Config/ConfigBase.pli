 (**
 * @addtogroup ConfigBase
 * @brief General configuration handling functions.
 * @{
*)
 (**
 * @brief Get the string value of a configuration key
 *
 * @param[in] Key The configuration key (e.g "path/name")
 * @param[out] Value The buffer where the value should be stored
 *
 * @return Error code structure
*)
FUNCTION Config_GetString : ErrorCode
VAR_INPUT
    Key : STRING[1023];
END_VAR
VAR_OUTPUT
    Value : STRING[1023];
END_VAR
END_FUNCTION
(**
 * @brief Get the boolean value of a configuration key
 *
 * @param[in] Key The configuration key (e.g "path/name")
 * @param[out] Value Pointer to the value
 *
 * @return Error code structure
*)
FUNCTION Config_GetBool : ErrorCode
VAR_INPUT
    Key : STRING[1023];
END_VAR
VAR_OUTPUT
    Value : BOOL;
END_VAR
END_FUNCTION
(**
 * @brief Get the integer value of a configuration key
 *
 * @param[in] Key The configuration key (e.g "path/name")
 * @param[out] Value Pointer to the value
 *
 * @return Error code structure
*)
FUNCTION Config_GetInteger : ErrorCode
VAR_INPUT
    Key : STRING[1023];
END_VAR
VAR_OUTPUT
    Value : LINT;
END_VAR
END_FUNCTION
(**
 * @brief Get the real value of a configuration key
 *
 * @param[in] Key The configuration key (e.g "path/name")
 * @param[out] Value Pointer to the value
 *
 * @return Error code structure
*)
FUNCTION Config_GetReal : ErrorCode
VAR_INPUT
    Key : STRING[1023];
END_VAR
VAR_OUTPUT
    Value : LREAL;
END_VAR
END_FUNCTION
(**
 * @brief Set configuration key to given String value.
 *
 * If the key does not exist yet a new key entry is created.
 *
 * @param[in] Key The configuration key (e.g "path/name")
 * @param[in] Value The configuration value to set
 *
 * @return Error code structure
*)
FUNCTION Config_SetString : ErrorCode
VAR_INPUT
    Key : STRING[1023];
    Value : STRING[1023];
END_VAR
END_FUNCTION
(**
 * @brief Set configuration key to given boolean value.
 *
 * If the key does not exist yet a new key entry is created.
 *
 * @param[in] Key The configuration key (e.g "path/name")
 * @param[in] Value The configuration value to set
 *
 * @return Error code structure
*)
FUNCTION Config_SetBool : ErrorCode
