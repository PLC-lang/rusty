(** @brief Process variable open parameters. *)
TYPE VPOOL_OpenParams :
STRUCT
    Name : STRING[VPOOL_PATH_NAME_LEN-1];           (**< Name of the process variable to be opened *)
    Flags : VPOOL_Flags := VPOOL_Flags_ReadOnly;    (**< Open flags. *)
    Error: ErrorCode;                               (**< Error code returned by the open operation. *)
    PvHandle: VPOOL_Handle;                         (**< Handle of the process variable. *)
END_STRUCT
END_TYPE
(** @brief Process variable close parameters. *)
TYPE VPOOL_CloseParams :
STRUCT
    PvHandle: VPOOL_Handle;                         (**< Handle of the process variable. *)
    Error: ErrorCode;                               (**< Error code returned by the open operation. *)
END_STRUCT
END_TYPE
(**
 * @}
